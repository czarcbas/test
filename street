    <script>
      function updateStreetView() {
        // Generate random values for latitude, longitude, and pitch
        const latitude = (Math.random() * 180 - 90).toFixed(6);
        const longitude = (Math.random() * 360 - 180).toFixed(6);
        const pitch = (Math.random() * 60 - 30).toFixed(0);

        // Create a Street View Panorama
        const panoOptions = {
          position: { lat: latitude, lng: longitude },
          pov: { heading: 0, pitch: pitch },
        };
        const panorama = new google.maps.StreetViewPanorama(
          document.getElementById("street-view-container"),
          panoOptions
        );
      }
    </script>
